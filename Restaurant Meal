TIP = 0.18
TAX = 0.07
food = float(input("Please enter the charge for the food: $"))
tip_amount = food * TIP
sales_tax_amount = food * TAX
total_price = food + tip_amount + sales_tax_amount
print("\n--- Receipt ---")
print(f"Food Charge: ${food:,.2f}")
print(f"Tip (18%):  ${tip_amount:,.2f}")
print(f"Sales Tax (7%): ${sales_tax_amount:,.2f}")
print(f"Total Price: ${total_price:,.2f}")
